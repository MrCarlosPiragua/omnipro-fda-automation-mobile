{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "entity - add_to_cart",
  "type": "object",
  "additionalProperties": true,
  "required": ["_fahorro", "eventType", "commerce", "productListItems"],
  "properties": {
    "eventType": { "type": "string", "const": "application.add_to_cart" },

    "_fahorro": {
      "type": "object",
      "additionalProperties": true,
      "required": ["appInformation"],
      "properties": {
        "appInteractionAttributes": { "type": "object", "additionalProperties": true },
        "appInformation": {
          "type": "object",
          "additionalProperties": true,
          "required": ["appStateDetails"],
          "properties": {
            "appStateDetails": {
              "type": "object",
              "additionalProperties": true,
              "required": ["screenName"],
              "properties": {
                "screenName": { "type": "string" }
              }
            }
          }
        }
      }
    },

    "commerce": {
      "type": "object",
      "additionalProperties": true,
      "required": ["productListAdds", "order"],
      "properties": {
        "cart": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "cartID": { "type": "string" }
          }
        },
        "productListAdds": {
          "type": "object",
          "additionalProperties": true,
          "required": ["value"],
          "properties": {
            "value": { "type": "number" }
          }
        },
        "order": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "currencyCode": { "type": "string" },
            "priceTotal": { "type": "number" },
            "_fahorro": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "orderPromos": { "type": "array", "items": { "type": "object" } }
              }
            }
          }
        }
      }
    },

    "productListItems": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["_fahorro", "product", "priceTotal", "name", "discountAmount", "SKU", "quantity"],
        "properties": {
          "_fahorro": {
            "type": "object",
            "additionalProperties": true,
            "required": ["productBrand", "position", "productPrice", "originalPrice", "taxAmount", "ownBrand", "requiresRecipe"],
            "properties": {
              "productBrand": { "type": "string" },
              "position": { "type": "string" },
              "productPrice": { "type": "number" },
              "originalPrice": { "type": "number" },
              "taxAmount": { "type": "number" },
              "ownBrand": { "type": "boolean" },
              "requiresRecipe": { "type": "boolean" },
              "productAvailable": { "type": "boolean" },
              "productFeatures": { "type": "string" },
              "productIngredients": { "type": "string" },
              "subscription": { "type": "boolean" },
              "productPromotions": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": true,
                  "required": ["discount", "promoType", "appliedPromotion"],
                  "properties": {
                    "discount": { "type": "number" },
                    "promoType": { "type": "string" },
                    "appliedPromotion": { "type": "string" },
                    "promotionId": { "type": "string" }
                  }
                }
              }
            }
          },

          "productCategories": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": true,
              "required": ["categoryName", "categoryPath", "categoryID"],
              "properties": {
                "categoryName": { "type": "string" },
                "categoryPath": { "type": "string" },
                "categoryID": { "type": "string" }
              }
            }
          },

          "product": { "type": "string" },
          "quantity": { "type": "number" },
          "priceTotal": { "type": "number" },
          "name": { "type": "string" },
          "discountAmount": { "type": "number" },
          "SKU": { "type": "string" }
        }
      }
    }
  }
}
