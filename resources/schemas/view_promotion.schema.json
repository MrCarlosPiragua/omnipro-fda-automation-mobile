{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "application.view_promotion (m√≠nimo)",
  "type": "object",
  "additionalProperties": true,
  "required": ["eventType", "_id", "timestamp", "_fahorro"],
  "properties": {
    "eventType": { "type": "string", "const": "application.view_promotion" },
    "_id": { "type": "string" },
    "timestamp": { "type": "string" },

    "_fahorro": {
      "type": "object",
      "additionalProperties": true,
      "required": ["appInformation", "appInteractionEvents"],
      "properties": {
        "appInformation": {
          "type": "object",
          "additionalProperties": true,
          "required": ["appStateDetails"],
          "properties": {
            "appStateDetails": {
              "type": "object",
              "additionalProperties": true,
              "required": ["screenName"],
              "properties": {
                "screenName": { "type": "string" }
              }
            }
          }
        },
        "appInteractionEvents": {
          "type": "object",
          "additionalProperties": true,
          "required": ["viewPromotion"],
          "properties": {
            "viewPromotion": {
              "type": "object",
              "additionalProperties": true,
              "required": ["value"],
              "properties": {
                "value": { "type": "integer" }
              }
            }
          }
        }
      }
    }
  }
}
