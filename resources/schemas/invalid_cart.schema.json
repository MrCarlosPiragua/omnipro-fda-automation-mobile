{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "application.invalid_cart (m√≠nimo)",
  "type": "object",
  "additionalProperties": true,
  "required": ["eventType", "_id", "timestamp", "_fahorro"],
  "properties": {
    "eventType": { "type": "string", "const": "application.invalid_cart" },
    "_id": { "type": "string" },
    "timestamp": { "type": "string" },

    "_fahorro": {
      "type": "object",
      "additionalProperties": true,
      "required": ["appInformation", "appInteractionEvents"],
      "properties": {
        "appInformation": {
          "type": "object",
          "additionalProperties": true,
          "required": ["appStateDetails"],
          "properties": {
            "appStateDetails": {
              "type": "object",
              "additionalProperties": true,
              "required": ["screenName"],
              "properties": { "screenName": { "type": "string" } }
            }
          }
        },
        "appInteractionEvents": {
          "type": "object",
          "additionalProperties": true,
          "required": ["invalidCart"],
          "properties": {
            "invalidCart": {
              "type": "object",
              "additionalProperties": true,
              "required": ["value"],
              "properties": { "value": { "type": "integer" } }
            }
          }
        },
        "appInteractionAttributes": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "errorDescription": { "type": "string" },
            "environment": { "type": "string" }
          }
        }
      }
    }
  }
}
