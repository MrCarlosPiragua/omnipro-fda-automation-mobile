{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "application.ux_mi_carrito (m√≠nimo)",
  "type": "object",
  "additionalProperties": true,
  "required": ["eventType", "_id", "timestamp", "_fahorro", "commerce"],
  "properties": {
    "eventType": { "type": "string", "const": "application.ux_mi_carrito" },
    "_id": { "type": "string" },
    "timestamp": { "type": "string" },

    "_fahorro": {
      "type": "object",
      "additionalProperties": true,
      "required": ["appInteractionEvents", "appInformation"],
      "properties": {
        "appInteractionEvents": {
          "type": "object",
          "additionalProperties": true,
          "required": ["miCarrito"],
          "properties": {
            "miCarrito": {
              "type": "object",
              "required": ["value"],
              "properties": { "value": { "type": "number" } }
            }
          }
        },
        "appInformation": {
          "type": "object",
          "additionalProperties": true,
          "required": ["appStateDetails"],
          "properties": {
            "appStateDetails": {
              "type": "object",
              "additionalProperties": true,
              "required": ["screenName"],
              "properties": { "screenName": { "type": "string" } }
            }
          }
        }
      }
    },

    "commerce": {
      "type": "object",
      "additionalProperties": true,
      "required": ["cart", "order"],
      "properties": {
        "cart": {
          "type": "object",
          "additionalProperties": true,
          "required": ["cartID"],
          "properties": { "cartID": { "type": "string" } }
        },
        "order": {
          "type": "object",
          "additionalProperties": true,
          "required": ["currencyCode", "priceTotal"],
          "properties": {
            "currencyCode": { "type": "string" },
            "priceTotal": { "type": "number" }
          }
        }
      }
    },

    "productListItems": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["product", "name", "SKU", "priceTotal"],
        "properties": {
          "product": { "type": "string" },
          "name": { "type": "string" },
          "SKU": { "type": "string" },
          "priceTotal": { "type": "number" }
        }
      }
    }
  }
}
